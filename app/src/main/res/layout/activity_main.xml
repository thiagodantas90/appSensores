<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainTela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensores"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btnVerSensores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Ver Sensores" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensores Valores"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btnGiroscopio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giroscopio" />

    <Button
        android:id="@+id/btnBussula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bussula" />
    <Button
        android:id="@+id/btnLigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luminosidade"/>
    <Button
        android:id="@+id/btnAcelerometro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acelerometro"/>
    <Button
        android:id="@+id/btnAproximacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aproximação"/>
</LinearLayout>